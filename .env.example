# PostgreSQL Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=nitter_x
POSTGRES_USER=nitter_user
POSTGRES_PASSWORD=your_secure_password_here

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# Application Configuration
APP_ENV=development
TZ=Asia/Shanghai

# LLM Configuration
LLM_API_KEY=your_api_key_here
LLM_API_URL=https://api.openai.com/v1
LLM_MODEL=gpt-3.5-turbo

# Crawler Configuration
CRAWLER_TIMEOUT=30
CRAWLER_RETRY=3
CRAWLER_DELAY=1.0
# HTTP 请求重试次数（针对单次请求失败的重试）
HTTP_RETRY_COUNT=3
# HTTP 请求重试间隔（秒）- 每次重试前的等待时间
HTTP_RETRY_DELAY=2

# Crawl Loop Configuration
# 采集循环间隔时间（秒）- 每次采集完成后等待多久再开始下一轮
CRAWL_INTERVAL=60
# 用户采集间隔时间（秒）- 只采集距上次采集超过此时间的用户
CRAWL_USER_INTERVAL=180
# 单个用户预估采集时间（秒）- 用于动态计算锁超时时间
ESTIMATED_TIME_PER_USER=5

# Tweet Processing Configuration
# 启用推文过期判断（true/false）- 超过指定时间的推文自动标记为 P6
ENABLE_24H_EXPIRATION=true
# 推文过期时间阈值（小时）- 默认24小时
TWEET_EXPIRATION_HOURS=24
